extends layout/main-layout.pug

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="", alt="")
                        .card__content
                            h2.product__price $19.99
                            p.product__description Product Description is here
                        .card__actions
                            button.btn Add to Cart
        else  
            h1 No Products